<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Jlib.Controls;assembly=Jlib.Controls"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
        <Style TargetType="{x:Type controls:ExpandableImageControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:ExpandableImageControl}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"	BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- 左侧切换按钮 -->
                                <Border Grid.Column="0"    Width="30"  Background="#E5E5E5" CornerRadius="8,0,0,8" Height="160" BorderThickness="0">
                                    <Button x:Name="ToggleButton" Background="Transparent" Foreground="Transparent" ToolTip="切换展开/折叠状态" BorderThickness="0">
                                         <Image x:Name="icon" Source="/Theme.Default;component/Pictures/caret-left.png" />
                                    </Button>
                                </Border>
                            <!--提示信息显示区-->
                            <Border x:Name="Title" Grid.Column="1" Grid.Row="0" Background="#E5E5E5" Width="60"  CornerRadius="8" Visibility="Collapsed">
                                <TextBlock Text="展开视频画面"  TextWrapping="Wrap"  Foreground="#878787" HorizontalAlignment="Center" Margin="10,0" FontSize="24" VerticalAlignment="Center" TextAlignment="Center" >
                                        <TextBlock.LayoutTransform>
                                            <RotateTransform Angle="0"/>
                                        </TextBlock.LayoutTransform>
                                    </TextBlock>
                                </Border>
                                <!-- 内容容器 -->
                            <Grid Grid.Column="3" x:Name="ContentGrid">
                                <Border x:Name="ContentBorder" Background="#E5E5E5" Width="300" CornerRadius="8" BorderThickness="0">
                                    <Image x:Name="ContentImage" Source="{TemplateBinding ImageSource}" Stretch="UniformToFill"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="10"/>
                                </Border>
                            </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="True">
                                <Setter TargetName="icon" Property="Source" Value="/Theme.Default;component/Pictures/caret-right.png"/>
                                <Setter TargetName="Title" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="ContentGrid" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsExpanded" Value="False">
                                <Setter TargetName="icon" Property="Source" Value="/Theme.Default;component/Pictures/caret-left.png"/>
                                <Setter TargetName="Title" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="ContentGrid" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ResourceDictionary>
