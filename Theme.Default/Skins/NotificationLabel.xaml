<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:Jlib.Controls;assembly=Jlib.Controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type controls:NotificationLabel}">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NotificationLabel}">
                    <Grid>
                        <Border x:Name="PART_Shake"  CornerRadius="10" Background="#17181A"/>
                        <StackPanel Orientation="Horizontal" x:Name="info" HorizontalAlignment="Center">
                            <TextBlock x:Name="txt" Text="{TemplateBinding Message}" TextWrapping="Wrap"  VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <Image x:Name="PART_Icon" Width="42" Height="42" Margin="20,0,0,0" />
                        </StackPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Message, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                            <Setter TargetName="info" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <Trigger Property="Type" Value="{x:Static controls:EnumNotificationType.None}">
                            <Setter TargetName="info" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="Type" Value="{x:Static controls:EnumNotificationType.Warning}">
                            <Setter TargetName="PART_Icon" Property="Source" Value="/Theme.Default;component/Pictures/success.png" />
                            <Setter TargetName="PART_Shake" Property="Background" Value="#17181A" />
                            <Setter TargetName="txt" Property="Foreground" Value="#FFFF00"/>
                        </Trigger>
                        <Trigger Property="Type" Value="{x:Static controls:EnumNotificationType.Info}">
                            <Setter TargetName="PART_Icon" Property="Source" Value="/Theme.Default;component/Pictures/success.png" />
                            <Setter TargetName="PART_Shake" Property="Background" Value="#17181A" />
                            <Setter TargetName="txt" Property="Foreground" Value="#2EC6D6"/>
                        </Trigger>
                        <Trigger Property="Type" Value="{x:Static controls:EnumNotificationType.Error}">
                            <Setter TargetName="PART_Icon" Property="Source" Value="/Theme.Default;component/Pictures/Fail.png" />
                            <Setter TargetName="PART_Shake" Property="Background" Value="#17181A" />
                            <Setter TargetName="txt" Property="Foreground" Value="#FF0000"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>